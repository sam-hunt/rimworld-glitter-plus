<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <!-- Add support for installing special OC bionics on our xeno friends -->

    <RecipeDef ParentName="SurgeryCrystalAdvanced">
        <defName>InstallCOCExo</defName>
        <label>install Orion Exoskeleton Implant</label>
        <description>Installs Orion Exoskeleton.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing Orion Exoskeleton.</jobString>
        <workAmount>4500</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>8</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>OCExo</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>OCExo</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Spine</li>
        </appliedOnFixedBodyParts>
        <addsHediff>OCExo</addsHediff>
    </RecipeDef>
    
</Defs>